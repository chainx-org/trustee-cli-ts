{
  "name": "trustee-tools",
  "version": "0.0.1",
  "description": "trustee-tools CLI",
  "private": true,
  "types": "build/types/types.d.ts",
  "bin": {
    "trustee-tools": "bin/trustee-tools"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json}",
    "lint": "tslint -p .",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "build": "yarn format && yarn lint && yarn clean-build && yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn build",
    "test": "jest",
    "watch": "jest --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "license": "MIT",
  "dependencies": {
    "@chainx-v2/api": "^0.0.49",
    "@ledgerhq/hw-app-btc": "^5.34.1",
    "@ledgerhq/hw-transport-node-hid": "^5.34.0",
    "@polkadot/api": "^2.9.1",
    "@polkadot/util": "^4.2.1",
    "@polkadot/util-crypto": "^4.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bitcoinjs-lib": "^5.2.0",
    "bitcoinjs-lib-zcash": "^3.6.1",
    "bitcore-lib": "^8.23.1",
    "bs58check": "^2.1.2",
    "buffer-reverse": "^1.0.1",
    "class-transformer": "^0.3.1",
    "cli-table3": "^0.6.0",
    "colors": "^1.4.0",
    "console.table": "^0.10.0",
    "dotenv": "^8.2.0",
    "enquirer": "^2.3.6",
    "gluegun": "latest",
    "ora": "^5.1.0",
    "trezor.js": "^9.3.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^14.14.10",
    "jest": "^24.1.0",
    "prettier": "^1.12.1",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
